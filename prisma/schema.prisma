generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                     Int       @id @default(autoincrement())
  email                  String    @unique
  name                   String
  passwordHash           String
  isAdmin                 Boolean @default(false)
  googleId               String?   @unique
  microsoftId            String?   @unique
  facebookId             String?   @unique
  passwordResetExpiresAt DateTime? @default(now())
  passwordResetTokenHash String? 
  orders                 Order[]
  transactions            Transaction[]
}

model Order {
  id        Int         @id @default(autoincrement())
  userId    Int
  createdAt DateTime
  total     Decimal     @db.Decimal(10, 2)
  notes     String?
  user      User        @relation(fields: [userId], references: [id])
  items     OrderItem[]
  transactions Transaction[]
}

model OrderItem {
  id          Int     @id @default(autoincrement())
  orderId     Int
  itemName    String
  size        String?
  unitPrice   Decimal @db.Decimal(10, 2)
  quantity    Int     @default(1)
  lineTotal   Decimal @db.Decimal(10, 2)
  milk        String?
  modifiers   String?
  sugar       Int?
  syrups      String?
  extras      String?
  sauce       String?
  tea         String?
  topping     String?
  egg         String?
  orderedFor  String
  productCode String?
  order       Order   @relation(fields: [orderId], references: [id])
}

model Transaction {
  id              Int      @id @default(autoincrement())
  orderId         Int?
  userId          Int?
  type            String
  amount          Int
  source          String
  reference       String?
  rawDescription  String?
  order           Order?   @relation(fields: [orderId], references: [id])
  user            User?    @relation(fields: [userId], references: [id])
  bankFingerprint String?
  createdAt       DateTime @default(now())

  @@unique([userId, bankFingerprint])
}
